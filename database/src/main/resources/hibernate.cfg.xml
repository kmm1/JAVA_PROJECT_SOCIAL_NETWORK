<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/xsd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/bl</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="com.itacademy.entity.Blog"/>
        <mapping class="com.itacademy.entity.Category"/>
        <mapping class="com.itacademy.entity.Comment"/>
        <mapping class="com.itacademy.entity.Friend"/>
        <mapping class="com.itacademy.entity.Message"/>
        <mapping class="com.itacademy.entity.Profile"/>
        <mapping class="com.itacademy.entity.User"/>
        <mapping class="com.itacademy.entity.Flashmob"/>
        <mapping class="com.itacademy.entity.Event"/>

    </session-factory>
</hibernate-configuration>